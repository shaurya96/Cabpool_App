<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.cabpool_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".DashboardActivity" />
        <activity android:name=".BookCabFormActivity"></activity>
        <activity android:name=".PoolRequestActivity"></activity>
        <activity android:name=".AddPostRequestActivity" />
        <activity android:name=".BookCabActivity"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>